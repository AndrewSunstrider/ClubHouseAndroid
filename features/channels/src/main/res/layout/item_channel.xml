<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent">

    <androidx.cardview.widget.CardView
        android:id="@+id/channels_cv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_24"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_marginEnd="@dimen/dp_24"
        android:layout_marginBottom="@dimen/dp_8"
        android:background="@color/white"
        android:elevation="@dimen/dp_4"
        app:cardCornerRadius="@dimen/dp_16">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/channel_cl"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/channel_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_8"
                android:layout_marginEnd="@dimen/dp_16"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Channel title" />

            <ImageView
                android:id="@+id/speaker_avatar_first"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:layout_marginStart="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_8"
                android:contentDescription="@string/speaker_avatar_description"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/channel_title"
                tools:background="@drawable/avatar_placeholder" />

            <!--TODO: Refactor constraints-->
            <ImageView
                android:id="@+id/speaker_avatar_second"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:layout_marginStart="@dimen/dp_24"
                android:layout_marginTop="@dimen/dp_24"
                android:contentDescription="@string/speaker_avatar_description"
                android:visibility="invisible"
                app:layout_constraintStart_toStartOf="@id/speaker_avatar_first"
                app:layout_constraintTop_toTopOf="@id/speaker_avatar_first"
                tools:background="@drawable/avatar_placeholder" />

            <TextView
                android:id="@+id/speaker_name_one"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_32"
                android:layout_marginEnd="@dimen/dp_32"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/speaker_avatar_second"
                app:layout_constraintTop_toTopOf="@id/speaker_avatar_first"
                tools:text="Speaker one" />

            <TextView
                android:id="@+id/member_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dp_16"
                android:drawablePadding="4dp"
                app:drawableRightCompat="@drawable/ic_person"
                app:layout_constraintEnd_toStartOf="@id/speakers_count"
                app:layout_constraintTop_toBottomOf="@id/speaker_avatar_second"
                tools:text="17" />

            <TextView
                android:id="@+id/speakers_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dp_24"
                android:layout_marginBottom="@dimen/dp_8"
                android:drawablePadding="4dp"
                app:drawableEndCompat="@drawable/ic_chat_bubble"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/member_count"
                tools:text="23" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>