<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="ClubHouseAndroid" parent="Theme.MaterialComponents.Light.NoActionBar" />

    <!-- region Auth-->
    <style name="AuthTextViewsStyle">
        <item name="fontFamily">@font/inter_500</item>
        <item name="android:textSize">@dimen/text_size_20</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:letterSpacing">0.05</item>
    </style>

    <style name="AuthButtonsStyle">
        <item name="android:gravity">center</item>
        <item name="fontFamily">@font/inter_400</item>
        <item name="android:textSize">@dimen/text_size_20</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:letterSpacing">0.15</item>
        <item name="cornerRadius">@dimen/dp_24</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item name="android:elevation">@dimen/dp_0</item>
        <item name="android:insetBottom">@dimen/dp_0</item>
        <item name="android:insetTop">@dimen/dp_0</item>
        <item name="android:insetLeft">@dimen/dp_0</item>
        <item name="android:insetRight">@dimen/dp_0</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:drawableEnd">@drawable/ic_baseline_arrow_right_alt_24</item>
        <item name="android:backgroundTint">@drawable/bg_auth_buttons</item>
        <item name="rippleColor">@color/white</item>
        <item name="android:clickable">true</item>
    </style>
    <!-- endregion Auth-->
</resources>